%h1 Create Hotel
.container
  = simple_form_for [:for_company, @company, @hotel] do |f|
    = f.input :name
    = f.input :stars,collection: 1..5, label: 'Hotel stars from 1-5'
    = f.input :description, label: 'Short description'
    = f.input :company_id, collection: current_user.companies, include_blank: false
    = f.input :country_id, collection: Country.all, include_blank: false, input_html: { class: 'select2' }
    = f.input :city_id, collection: [], include_blank: false, input_html: { class: 'select2' }
    = f.submit
